@model JosephProject1.App.Models.CustomerViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Customer Details For:</h1>

<table class="table">
    <caption>Customer Info</caption>
    <thead>
        <tr>
            <th scope="col">
                @Html.DisplayFor(model => model.Id)
            </th>
            <th scope="col">
                @Html.DisplayFor(model => model.FirstName)
            </th>
            <th scope="col">
                @Html.DisplayFor(model => model.LastName)
            </th>
            <th scope="col">
                @Html.DisplayFor(model => model.TotalPurchases)
            </th>
            <th></th>
        </tr>
    </thead>
    <thead>
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Orders.First().Id)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Orders.First().LocationId)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Orders.First().CustomerId)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Orders.First().Total)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Orders)
        {
            <tr>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.LocationId)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.CustomerId)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
            </tr>
        }
    </tbody>
</table>


<div>
    <a asp-action="Index">Back to customer list</a>
</div>
