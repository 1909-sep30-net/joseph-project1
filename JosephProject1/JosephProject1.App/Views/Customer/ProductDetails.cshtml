@model JosephProject1.App.Models.CustomerViewModel

@{
    ViewData["Title"] = "ProductDetails";
}

<h1>Product Details</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPurchases)
            </th>
            <th></th>
        </tr>
    </thead>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Orders.First().ProductOrders.First().Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Orders.First().ProductOrders.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Orders.First().ProductOrders.First().Quantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Orders.ProductOrders)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
            </tr>
        }
    </tbody>
</table>
