@model JosephProject1.App.Models.OrdersViewModel

@{
    ViewData["Title"] = "Product Details";
}

<h1>Product Details</h1>

<table class="table">
    <caption>Product Info</caption>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocationId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th></th>
        </tr>
        <tr>
            <th>
                @Html.DisplayFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayFor(model => model.LocationId)
            </th>
            <th>
                @Html.DisplayFor(model => model.CustomerId)
            </th>
            <th>
                @Html.DisplayFor(model => model.Total)
            </th>
            <th></th>
        </tr>
    </thead>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductOrders.First().Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductOrders.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductOrders.First().Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductOrders.First().Total)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ProductOrders)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
            </tr>
        }
    </tbody>
</table>

