@model IEnumerable<JosephProject1.App.Models.LocationViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Locations</h1>

<table class="table">
    <caption>Location Info</caption>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sales)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @String.Format("{0:c}", item.Sales)
                </td>
                <td>
                    @Html.ActionLink("Place Order", "PlaceOrder", new { id = item.Id }) |
                    @Html.ActionLink("Inventory Details", "InventoryDetails", new { id = item.Id }) |
                    @Html.ActionLink("Orders Details", "OrdersDetails", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
